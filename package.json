{
  "name": "lollipop",
  "version": "1.0.14",
  "description": "A delicious way to unit test emails",
  "engines": {
    "node": ">=10.15.0"
  },
  "main": "build/index.js",
  "dependencies": {
    "@hapi/boom": "^7.4.3",
    "@hapi/hapi": "^18.4.0",
    "@hapi/inert": "^5.2.2",
    "cheerio": "^1.0.0-rc.2",
    "dotenv": "^8.1.0",
    "get-port": "^5.0.0",
    "handlebars": "^4.3.1",
    "open": "^6.4.0",
    "query-string": "^6.8.3",
    "uuid": "^3.3.3"
  },
  "scripts": {
    "start": "node build/index.js",
    "ts": "tsc -w",
    "nodemon": "nodemon",
    "code": "concurrently -n ts,nodemon npm:ts npm:nodemon",
    "test": "lab -S build/test",
    "test-lp": "LOLLIPOP_LIVE_PREVIEW=true lab build/test",
    "build": "rm -fr build/*; tsc",
    "ncu": "ncu -u"
  },
  "author": "Sun Knudsen <hello@sunknudsen.com>",
  "license": "MIT",
  "keywords": [
    "development",
    "email",
    "test"
  ],
  "devDependencies": {
    "@hapi/code": "^6.0.0",
    "@hapi/lab": "^20.3.2",
    "@types/cheerio": "^0.22.13",
    "@types/dotenv": "^6.1.1",
    "@types/get-port": "^4.2.0",
    "@types/hapi__boom": "^7.4.1",
    "@types/hapi__code": "^5.3.0",
    "@types/hapi__hapi": "^18.2.5",
    "@types/hapi__inert": "^5.2.0",
    "@types/hapi__joi": "^15.0.4",
    "@types/open": "^6.2.1",
    "@types/query-string": "^6.3.0",
    "@types/uuid": "^3.4.5",
    "concurrently": "^4.1.2",
    "nodemon": "^1.19.2",
    "typescript": "^3.6.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lickstats/lollipop.git"
  },
  "bugs": {
    "url": "https://github.com/lickstats/lollipop/issues"
  },
  "homepage": "https://github.com/lickstats/lollipop#readme"
}
